

CREATE TABLE Worker (
WORKER_ID NUMBER generated by default as identity PRIMARY KEY ,
FIRST_NAME CHAR(25),
LAST_NAME CHAR(25),
SALARY NUMBER(15),
JOINING_DATE DATE,
DEPARTMENT CHAR(25)
);

