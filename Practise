select * from worker ;

select * from (select rownum rn, w.* from worker w ) where mod(rn,2) = 0 ;

create table worker_clone as select * from worker ;

select * from worker_clone ;

select w.* from worker w
intersect
select wc.* from (select worker_id,first_name,last_name,salary,joining_date,department,rownum_column from worker_clone) wc ;

select sysdate from dual ;

select CURRENT_TIMESTAMP as now from dual ;

select systimestamp as now from dual ;

select to_char(sysdate,'dd-mon-yy') dates , to_char(sysdate,'hh24:mi:ss') timee from dual ;



select * from worker fetch next &k row only ;



select w1.* from worker w1 inner join worker w2 on w1.salary = w2.salary where w1.worker_id <> w2.worker_id order by w1.worker_id ;

Select distinct W.WORKER_ID, W.FIRST_NAME, W.Salary 
from Worker W, Worker W1 
where W.Salary = W1.Salary 
and W.WORKER_ID != W1.WORKER_ID;

select salary,LISTAGG(first_name)
within group(order by salary) list from worker
group by salary having count(first_name)>1;

